# Local Kokoro TTS configuration for testing
# Use this with: cp .env.local.kokoro .env.local

# Use local Kokoro TTS
TTS_BASE_URL=http://127.0.0.1:8880/v1

# Use local Whisper STT
# STT_BASE_URL=http://localhost:2022/v1

# Kokoro voice options
TTS_VOICE=af_nova

# Enable debug mode
VOICE_MCP_DEBUG=true

# For trace debugging, use:
# VOICE_MCP_DEBUG=trace
