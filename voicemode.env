# Voice Mode Configuration
# This file configures voice-mode to use only local services

# STT Configuration - Use only local whisper.cpp
VOICEMODE_STT_BASE_URLS="http://127.0.0.1:2022/v1"

# TTS Configuration - Use local Kokoro
VOICEMODE_TTS_BASE_URLS="http://0.0.0.0:8880/v1"

# Disable Wispr Flow mode (since we're handling STT locally)
VOICEMODE_WISPR_FLOW_MODE="false"

# Debug mode for troubleshooting
VOICEMODE_DEBUG="true"

# Prefer local services over cloud
VOICEMODE_PREFER_LOCAL="true"

# Auto-start services when converse is called
# This will automatically start Whisper and Kokoro if they're not running
VOICE_MODE_AUTO_START_SERVICES="true"

# Individual service auto-start options (optional, overridden by AUTO_START_SERVICES)
# VOICE_MODE_AUTO_START_WHISPER="true"
# VOICE_MODE_AUTO_START_KOKORO="true"